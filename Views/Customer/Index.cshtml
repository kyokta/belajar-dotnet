@model IEnumerable<BelajarCRUD.Models.Customer>

@{
    ViewData["Title"] = "Daftar Customer";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Buat Customer Baru</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nama Customer</th>
            <th>Email</th>
            <th>Tanggal Lahir</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerName</td>
                <td>@item.Email</td>
                <td>@item.BirthDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerID" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CustomerID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>