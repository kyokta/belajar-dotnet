@model BelajarCRUD.Models.Product

@{
    ViewData["Title"] = "Detail Produk";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="row g-0">
            <div class="col-md-4 d-flex align-items-center justify-content-center" style="min-height: 300px;">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="~/images/products/@Model.ImageUrl" class="img-fluid rounded" alt="@Model.ProductName"
                        style="max-height: 300px; width: auto; object-fit: contain;">
                }
                else
                {
                    <img src="~/images/placeholder.png" class="img-fluid rounded" alt="Tidak ada gambar"
                        style="max-height: 300px; width: auto; object-fit: contain;">
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.ProductName</h3>
                    <hr>
                    <dl class="row">
                        <dt class="col-sm-3">Deskripsi</dt>
                        <dd class="col-sm-9">
                            <p class="card-text">@Model.Description</p>
                        </dd>

                        <dt class="col-sm-3">Harga</dt>
                        <dd class="col-sm-9">
                            <h4 class="text-success fw-bold">@Model.Price.ToString("C", new
                                System.Globalization.CultureInfo("id-ID"))</h4>
                        </dd>

                        <dt class="col-sm-3">Stok</dt>
                        <dd class="col-sm-9">
                            <p class="card-text">@Model.Stock</p>
                        </dd>
                    </dl>

                    <div class="mt-4">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a>
                        <a class="btn btn-secondary" asp-action="Index">Kembali ke Daftar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
