@model IEnumerable<BelajarCRUD.Models.Product>

@{
    ViewData["Title"] = "Data Produk";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="mb-3">
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Tambah Produk Baru
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col" style="width: 10%;">Gambar</th>
                        <th scope="col">Nama Produk</th>
                        <th scope="col">Harga</th>
                        <th scope="col">Stok</th>
                        <th scope="col" style="width: 15%;">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rowNo = 1;
                    }
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@(rowNo++)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="~/images/products/@product.ImageUrl" class="img-thumbnail" alt="@product.ProductName"
                                        style="width: 80px; height: 80px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="~/images/placeholder.png" class="img-thumbnail" alt="Tidak ada gambar"
                                        style="width: 80px; height: 80px; object-fit: cover;" />
                                }
                            </td>
                            <td class="fw-bold">@product.ProductName</td>
                            <td>@product.Price.ToString("C", new System.Globalization.CultureInfo("id-ID"))</td>
                            <td>@product.Stock</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit"
                                        asp-route-id="@product.ProductID" title="Edit">Edit</a>
                                    <a class="btn btn-sm btn-outline-info" asp-action="Details"
                                        asp-route-id="@product.ProductID" title="Details">Detail</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete"
                                        asp-route-id="@product.ProductID" title="Delete">Hapus</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">
            <h4 class="alert-heading">Belum Ada Data!</h4>
            <p>Saat ini belum ada produk yang ditambahkan. Silakan klik tombol "Tambah Produk Baru" untuk memulai.</p>
        </div>
    }
</div>
